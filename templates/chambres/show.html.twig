{% extends 'base.html.twig' %}

{% block title %}Chambres{% endblock %}

{% block body %}

<div class="container-fluid">
		<div class="row page-titles">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active">
					<a href="javascript:void(0)">CHAMBRES</a>
				</li>
				<li class="breadcrumb-item">
					<a href="javascript:void(0)">Details</a>
				</li>
			</ol>
		</div>
		<!-- row -->
		<div class="row">
			<div class="col-xl-8 col-lg-8">
				<div class="card">
					<div class="card-header">
						<h2 class="card-title">information sur la chambre</h2>
					</div>
					<div class="card-body">
						<div class="input-primary">
							
                             <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ chambre.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Libelle</th>
                                        <td>{{ chambre.libelle }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prix</th>
                                        <td>{{ chambre.prix }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ chambre.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Disponible</th>
                                        <td>{{ chambre.etat ? 'OUI' : 'NON' }}</td>
                                    </tr>
                                </tbody>
                            </table>

							<div class="row">
								<div class="col-3">
									<a class="btn btn-warning btn-sm" href="{{ path('app_chambres_index') }}">Revenir Ã  la Liste</a>

								</div>
								<div class="col-2">
									<a class="btn btn-info btn-sm" href="{{ path('app_chambres_edit', {'id': chambre.id}) }}">Editer</a>

								</div>
								<div class="col-2">
									  {{ include('chambres/_delete_form.html.twig') }}

								</div>

							</div>
						</div>
					</div>

        </div>


{% endblock %}
