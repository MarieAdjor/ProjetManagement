{% extends 'base.html.twig' %}

{% block title %}Clients index
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row page-titles">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active">
					<a href="javascript:void(0)">LISTE</a>
				</li>
				<li class="breadcrumb-item">
					<a href="javascript:void(0)">Clients</a>
				</li>
			</ol>
		</div>
		<!-- row -->
		<div class="row">
			<div class="">
				<div class="card">
					<div class="card-header">
						<h2 class="card-title">Liste des Clients.</h2>
					</div>
					<div class="card-body">
						<div class="input-primary">
							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Nom Complet</th>
										<th>Adresse</th>
										<th>Tel</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for client in clients %}
										<tr>
											<td>{{ client.id }}</td>
											<td>{{ client.nomComplet }}</td>
											<td>{{ client.adresse }}</td>
											<td>{{ client.tel }}</td>
											<td>
												<a href="{{ path('app_clients_show', {'id': client.id}) }}" title="Voir">
													<svg id="icon-customers" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
														<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
														<circle cx="12" cy="7" r="4"></circle>
													</svg>
									            </a>
									            <a href="{{ path('app_clients_edit', {'id': client.id}) }}" title="Editer">
										            <svg id="icon-orders" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
											        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
											        <polyline points="14 2 14 8 20 8"></polyline>
                                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                                    <polyline points="10 9 9 9 8 9"></polyline>
                                                    </svg>
									            </a>
                                            </td>
								</tbody>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Aucun Enregistrements Trouv√©.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>
		<div>
			<a class="btn btn-info btn-sm" href="{{ path('app_clients_new') }}">Creer Nouveau</a>
		</div>
	</div>


{% endblock %}
